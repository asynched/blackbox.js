{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
